<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <!-- SPA fallback sin forzar HTTPS, con exclusiones de recursos estáticos -->
    <rewrite>
      <rules>
        <!-- Redirección específica para favicon a recurso existente -->
        <rule name="Favicon to logo" stopProcessing="true">
          <match url="^favicon\.ico$" />
          <conditions logicalGrouping="MatchAll">
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
          </conditions>
          <action type="Rewrite" url="/logo/logow.ico" />
        </rule>

        <!-- Normalizar rutas anidadas a directorios estáticos del root -->
        <rule name="Normalize assets path" stopProcessing="true">
          <match url=".*/assets/(.*)" />
          <action type="Rewrite" url="/assets/{R:1}" />
        </rule>
        <rule name="Normalize images path" stopProcessing="true">
          <match url=".*/images/(.*)" />
          <action type="Rewrite" url="/images/{R:1}" />
        </rule>
        <rule name="Normalize logo path" stopProcessing="true">
          <match url=".*/logo/(.*)" />
          <action type="Rewrite" url="/logo/{R:1}" />
        </rule>
        <rule name="Normalize templates path" stopProcessing="true">
          <match url=".*/templates/(.*)" />
          <action type="Rewrite" url="/templates/{R:1}" />
        </rule>

        <rule name="SPA Fallback" stopProcessing="true">
          <match url=".*" />
          <conditions logicalGrouping="MatchAll">
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
            <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />
            <!-- No reescribir recursos estáticos por extensión -->
            <add input="{REQUEST_URI}" pattern="\.(js|mjs|css|map|png|jpg|jpeg|gif|svg|ico|webp|wasm|json|txt|xlsx|pdf)$" negate="true" />
            <!-- No reescribir rutas de carpetas de assets conocidas -->
            <add input="{REQUEST_URI}" pattern="^/(assets|images|logo|templates)/" negate="true" />
          </conditions>
          <action type="Rewrite" url="/index.html" />
        </rule>
      </rules>
    </rewrite>

    <staticContent>
      <!-- Evitar conflictos por mapeos repetidos en hosting compartido -->
      <remove fileExtension=".mjs" />
      <remove fileExtension=".json" />
      <remove fileExtension=".wasm" />
      <mimeMap fileExtension=".mjs" mimeType="text/javascript" />
      <mimeMap fileExtension=".json" mimeType="application/json" />
      <mimeMap fileExtension=".wasm" mimeType="application/wasm" />
    </staticContent>
  </system.webServer>
</configuration>